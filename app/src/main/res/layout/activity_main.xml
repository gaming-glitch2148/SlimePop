<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_radial">

    <com.slimepop.asmr.SlimeView
        android:id="@+id/slimeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/topLeftControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/control_icon_bg"
            android:contentDescription="Settings"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_manage"
            app:tint="#E8ECFF" />

        <ImageButton
            android:id="@+id/btnToggleSound"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/control_icon_bg"
            android:contentDescription="Sound on"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            app:tint="#E8ECFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coinChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/glass_hud_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="#FFD84D" />

        <TextView
            android:id="@+id/tvCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRemoveAds"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/remove_ads_button_bg"
        android:minWidth="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="PRO"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_hud_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvDaily"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Streak x1"
                android:textColor="#FFD6A8"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDaily"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/ad_square_button_bg"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Daily"
                android:textAllCaps="false"
                android:textColor="#F3F8FF"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEquipped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Ocean â€¢ Soft Rain"
            android:textColor="#D2DDF0"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/dock_glass_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnShop"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:background="@drawable/dock_circle_shop_bg"
                android:drawableTop="@android:drawable/ic_menu_agenda"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="SHOP"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRewardedBoost"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:background="@drawable/ad_square_button_bg"
                android:drawableTop="@android:drawable/ic_menu_slideshow"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="BOOST"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSkins"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:background="@drawable/dock_circle_skins_bg"
                android:drawableTop="@android:drawable/ic_menu_gallery"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="SKINS"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRelax"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/relax_button_bg"
            android:text="RELAX MODE"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
